<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="se.liu.ida.josfa969.lab2.GroupListActivity"
    tools:ignore="MergeRootFrame" >

    <fragment android:name="se.liu.ida.josfa969.lab2.GroupListFragment"
        android:id="@+id/group_list_layout"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        tools:layout="@layout/group_list_layout" />

    <fragment android:name="se.liu.ida.josfa969.lab2.AdditionalInfoFragment"
        android:id="@+id/additional_info_layout"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        tools:layout="@layout/additional_info_layout" />

</LinearLayout>